<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardBackgroundColor="#322945"
    app:cardCornerRadius="20dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textColor="@color/md_theme_onPrimary"
            android:textColorLink="@color/md_theme_onPrimary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_moon_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Moon count: "
            android:textColor="@color/md_theme_onPrimary"
            android:textColorLink="@color/md_theme_onPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_gravity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gravity: "
            android:textColor="@color/md_theme_onPrimary"
            android:textColorLink="@color/md_theme_onPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_avg_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Average Temperature: "
            android:textColor="@color/md_theme_onPrimary"
            android:textColorLink="@color/md_theme_onPrimary"
            android:textSize="18sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>

